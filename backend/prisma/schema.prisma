// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model bot {
  id           Int      @id @default(autoincrement())
  botId        String   @unique
  name         String
  description  String
  openAiKey    String
  slackToken   String
  slackChannel String
  sourceLink   String
  botLink      String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model transcript {
  id        Int      @id @default(autoincrement())
  botId     String
  question  String
  answer    String
  createdAt DateTime @default(now())
}
